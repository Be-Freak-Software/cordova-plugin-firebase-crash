<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
xmlns:android="http://schemas.android.com/apk/res/android"
           id="cordova-plugin-firebase-crash"
      version="0.12.0">

    <name>cordova-plugin-firebase-crash</name>
    <description>Cordova plugin for Firebase Crashlytics</description>
    <license>MIT</license>
    <keywords>cordova</keywords>
    <repo>https://github.com/chemerisuk/cordova-plugin-firebase-crash</repo>
    <issue>https://github.com/chemerisuk/cordova-plugin-firebase-crash/issues</issue>

    <js-module src="www/FirebaseCrashlytics.js" name="FirebaseCrashlytics">
        <merges target="cordova.plugins.firebase.crashlytics" />
    </js-module>

    <engines>
        <engine name="cordova" version=">=6.0.0"/>
        <engine name="cordova-android" version=">=6.0.0"/>
        <engine name="cordova-ios" version=">=4.3.0"/>
    </engines>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="FirebaseCrashlytics">
                <param name="ios-package" value="FirebaseCrashlyticsPlugin" />
                <param name="onload" value="false" />
            </feature>
        </config-file>

        <header-file src="src/ios/FirebaseCrashlyticsPlugin.h" />
        <source-file src="src/ios/FirebaseCrashlyticsPlugin.m" />

        <framework src="Firebase/Core" type="podspec" spec="~> 5.0"/>
        <framework src="Fabric" type="podspec" spec="~> 1.7.6"/>
        <framework src="Crashlytics" type="podspec" spec="~> 3.10.1"/>
    </platform>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="FirebaseCrashlytics">
                <param name="android-package" value="by.chemerisuk.cordova.firebase.FirebaseCrashlyticsPlugin" />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <meta-data android:name="firebase_crashlytics_collection_enabled" android:value="${crashlyticsEnabled}" />
        </config-file>

        <dependency id="cordova-support-google-services" version="~1.2.0"/>

        <framework src="build.gradle" custom="true" type="gradleReference" />

        <source-file src="src/android/FirebaseCrashlyticsPlugin.java"
            target-dir="src/by/chemerisuk/cordova/firebase/" />
    </platform>

</plugin>
